<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_grey"
    android:statusBarColor="@color/garnet"
    android:id="@+id/studentHomeActivity"
    tools:context=".HomeStudentActivity"
    >

    <ImageView
        android:id="@+id/uottawa_logo"
        android:layout_width="277dp"
        android:layout_height="191dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="236dp"
        app:layout_constraintBaseline_toBaselineOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/uottawa_hor_black"
        app:tint="@color/grey" />

    <TextView
            android:id="@+id/courselist_text"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:text="Welcome"
            android:textColor="@color/black"
            android:textSize="40sp"
            android:fontFamily="serif"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/horoz_layout_top" />

        <LinearLayout
            android:id="@+id/horoz_layout_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@color/garnet"
            >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/blanc1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="user_text"
                    android:textColor="@color/white"
                    android:textSize="25sp"
                    android:fontFamily="sans-serif-medium"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/roleStudent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="user_role_text"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/blanc1"
                    />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/sign_out_btn_student"
        android:layout_width="169dp"
        android:layout_height="55dp"
        android:layout_marginTop="10dp"
        android:background="@color/garnet"
        android:fontFamily="sans-serif-medium"
        android:text="Sign Out"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/viewCourseBtn_Student" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/viewCourseBtn_Student"
        android:layout_width="169dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="136dp"
        android:background="@color/garnet"
        android:text="View Course"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/uottawa_logo" />

</androidx.constraintlayout.widget.ConstraintLayout>

